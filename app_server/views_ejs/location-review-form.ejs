<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ./layout/header %>
    </head>
    <body>
        <% include ./layout/navbar %>
            <!-- Begin Content  -->
            <div class="container">
                <div class="row page-header">
                    <div class="col-lg-12">
                        <h1><%=pageHeader.title%></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <form id="addReview" class="form-horizontal" action="" method="POST" role="form">
                            <%if(error == "val") {%>
                                <div class="alert alert-danger" role="alert">
                                    All fields required, please try again
                                </div>
                            <%}%>

                            <div class="form-group">
                                <label class="col-xs-10 col-sm-2 control-label" for="name">Name</label>
                                <div class="col-xs-12 col-sm-10">
                                    <input id="name" class="form-control" name="name" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-xs-10 col-sm-2 control-label" for="rating">Rating</label>
                                <div class="col-xs-12 col-sm-2">
                                    <select id="rating" class="form-control input-sm" name="rating">
                                        <option value="5">5</option>
                                        <option value="4">4</option>
                                        <option value="3">3</option>
                                        <option value="2">2</option>
                                        <option value="1">1</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-xs-10 col-sm-2 control-label" for="review">Review</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" name="review" id="review" rows="5"></textarea>
                                </div>
                            </div>
                            <button class="btn btn-default pull-right">Add my review</button>
                        </form>
                    </div>
                    <div class="col-xs-12 col-md-4">

                    </div>
                </div>
            </div>

            <!-- end Content  -->
            <footer>
                <% include ./layout/footer %>
            </footer>
    </body>
</html>
<script>
    $("#addReview").submit(function(event){
    $(".alert.alert-danger").hide();
    if(!$("input#name").val() || !("select#rating").val()|| !("textarea#review").val()){
        if($(".alert.alert-danger").length){
            $(".alert.alert-danger").show();
        } else{
            $(this).prepend("<div role='alert' class='alert alert-danger'>All fiels required, please try again</div>");
        }
        return false;
    }
})
</script>