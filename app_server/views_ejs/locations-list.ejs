<!DOCTYPE html>
<html>

<head>
    <% include ./layout/header %>
</head>

<body>
    <% include ./layout/navbar %>
        <!-- Begin Content  -->
        <div class="container">
            <div id="banner" class="page-header">
                <div class="row">
                    <div class="col-lg-6">
                        <h1><%=pageHeader.title%></h1>
                        <small>&nbsp; <%=pageHeader.strapline%></small>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-8">
                    <div class="list-group">
                        <div class="col-xs-12 list-group-item">
                            <% locations.forEach(function(itemLocation){%>
                            <h4>
                                <a href="/location"><%=itemLocation.name%></a>
                                <small>&nbsp;
                                    <%for (var i = 1; i <= 5 ; i++ ){
                                        if(i <= itemLocation.rating){%>
                                            <span class="glyphicon glyphicon-star"></span>
                                        <%} else {%>
                                            <span class="glyphicon glyphicon-star-empty"></span>
                                        <%}   
                                    }%>
                                </small>
                                <span class="badge pull-right badge-default"><%=Math.round(itemLocation.distance)%></span>
                            </h4>
                            <p class="address"><%=itemLocation.address%></p>
                            <p>
                                <%for(var i = 0;i < itemLocation.facilities.length;i++){%>
                                    <span class="label label-warning"><%=itemLocation.facilities[i]%></span> &nbsp;
                                <%}%>
                            </p>

                            <%});%>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-4">
                    <p class="lead"> Looking for wifi and a seat? Loc8r helps you find places to work when out and about .Perhaps with coffee,
                        cake or a pint? Let Loc8r help you find the place you're looking for.
                    </p>
                </div>
            </div>
        </div>

        <!-- end Content  -->
        <footer>
            <% include ./layout/footer %>
        </footer>
</body>

</html>